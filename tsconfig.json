{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@codelens/*": ["codelens/*"],
      "@commands/*": ["commands/*"],
      "@editors/*": ["editors/*"],
      "@helpers/*": ["helpers/*"],
      "@project/*": ["project/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode-test"],
}

{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "#assets": ["assets.ts"],
      "#constants": ["constants.ts"],
      "#extension": ["extension.ts"],
      "#helpers/*": ["core/helpers/*"],
      "#models/*": ["core/models/*"],
      "#workspace/*": ["core/workspace/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode-test"],
}
